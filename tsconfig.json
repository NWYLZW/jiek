{
  "compilerOptions": {
    "target": "ESNext",
    "module": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "paths": {
      "@jiek/*": ["./packages/*/src"]
    }
  },
  "exclude": ["node_modules", "**/dist"]
}
