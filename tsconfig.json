{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "paths": {
      "jiek": ["./packages/jie/src"],
      "jiek/*": ["./packages/jie/src/*"],
      "@jiek/*": ["./packages/*/src"],
      "@jiek/utils/*": ["./packages/utils/src/*"]
    }
  },
  "exclude": ["node_modules", "**/dist"]
}
