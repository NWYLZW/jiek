    "@types/cli-progress": "^3.11.5",
    "@types/inquirer": "^9.0.7",
    "@types/js-yaml": "^4.0.9",
    "@types/micromatch": "^4.0.6",
    "esbuild-register": "^3.5.0",
    "micromatch": "^4.0.5",
    "node-sass": "^9.0.0",
    "postcss": "^8.4.47",
