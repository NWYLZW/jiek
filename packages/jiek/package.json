  "bin": {
    "jiek": "bin/jiek.js",
    "jk": "bin/jiek.js",
    "jiek-build": "bin/jiek-build.js",
    "jb": "bin/jiek-build.js"
  },
  "files": ["dist", "src", "bin", "LICENSE", "README.md"],
