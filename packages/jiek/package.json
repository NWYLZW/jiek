    "@rollup/plugin-commonjs": "^28.0.0",
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "cli-progress": "^3.12.0",
    "commander": "^12.0.0",
    "detect-indent": "^6.1.0",
