{
  "name": "jiek",
  "type": "module",
  "version": "2.2.7",
  "description": "A lightweight toolkit for compiling and managing libraries based on `package.json` metadata and suitable for `Monorepo`.",
  "author": "YiJie <yijie4188@gmail.com>",
  "homepage": "https://github.com/NWYLZW/jiek/tree/master/packages/jiek#readme",
  "repository": {
    "url": "nwylzw/jiek",
    "directory": "packages/jiek"
  },
  "bugs": "https://github.com/NWYLZW/jiek/issues?q=is%3Aissue+is%3Aopen+jiek",
  "keywords": [
    "cli",
    "zero-config",
    "bundler",
    "library",
    "monorepo",
    "builder",
    "rollup",
    "workspace"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": "./src/index.ts",
    "./bin-helper": {
      "require": "./bin-helper/index.cjs",
      "default": "./bin-helper/index.js"
    },
    "./rollup": "./src/rollup/index.ts"
  },
  "imports": {
    "#~/*": [
      "./src/*",
      "./src/*/index.ts",
      "./src/*/index.tsx"
    ]
  },
  "bin": {
    "jiek": "bin/index.cjs",
    "jk": "bin/index.cjs",
    "jiek-build": "bin/build.cjs",
    "jb": "bin/build.cjs"
  },
  "files": [
    "LICENSE",
    "README.md",
    "bin",
    "bin-helper",
    "dist",
    "src"
  ],
  "scripts": {
    "prepublish": "pnpm test && jb -nm && jk",
    "postpublish": "jk",
    "test": "vitest run"
  },
  "peerDependencies": {
    "@pnpm/filter-workspace-packages": "^7.2.13||^8.0.0||^9.0.0||^10.0.0||>=1000.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "esbuild-register": "^3.5.0",
    "postcss": "^8.4.47",
    "rollup-plugin-esbuild": "^6.1.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-swc3": "^0.12.1",
    "typescript": "^4.0.0||^5.0.0",
    "vite-bundle-analyzer": "0.16.0-beta.3"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.2.0",
    "@jiek/pkger": "workspace:^",
    "@jiek/rollup-plugin-dts": "^6.3.2",
    "@jiek/utils": "workspace:^",
    "@rollup/plugin-commonjs": "^28.0.0",
    "@rollup/plugin-inject": "^5.0.5",
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "cli-progress": "^3.12.0",
    "commander": "^12.0.0",
    "detect-indent": "^6.1.0",
    "execa": "~9.3.1",
    "js-yaml": "^4.1.0",
    "jsonc-parser": "^3.2.1",
    "koa": "^2.15.3",
    "rollup": "^4.0.0"
  },
  "devDependencies": {
    "@npm/types": "^1.0.2",
    "@pnpm/filter-workspace-packages": "^7.2.13",
    "@pnpm/workspace.pkgs-graph": "^2.0.15",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/cli-progress": "^3.11.5",
    "@types/inquirer": "^9.0.7",
    "@types/js-yaml": "^4.0.9",
    "@types/koa": "^2.15.0",
    "@types/micromatch": "^4.0.6",
    "@types/react": "^18.3.14",
    "esbuild-register": "^3.5.0",
    "micromatch": "^4.0.5",
    "node-sass": "^9.0.0",
    "postcss": "^8.4.47",
    "rollup-plugin-esbuild": "^6.1.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-swc3": "^0.12.1",
    "vite-bundle-analyzer": "0.16.0-beta.3"
  }
}
