{
  "compilerOptions": {
    "target": "ESNext",
    "rootDir": "./src",
    "module": "CommonJS",
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
