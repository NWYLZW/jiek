{
  "compilerOptions": {
    "target": "ESNext",
    "rootDir": "..",
    "module": "ESNext",
    "allowImportingTsExtensions": true,
    "strict": true,
    "strictNullChecks": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
